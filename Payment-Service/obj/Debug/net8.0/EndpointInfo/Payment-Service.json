      "CodPaymentRequest": {
        "required": [
          "currency",
          "orderId",
          "totalAmount",
          "userId"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "totalAmount": {
            "type": "number",
            "format": "double"
          },
          "currency": {
            "minLength": 1,
